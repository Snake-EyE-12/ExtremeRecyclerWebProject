@model IEnumerable<PlayerData>

<div class="text-center col-sm">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Rank</th>
                <th scope="col">Name</th>
                <th scope="col">Money Gained</th>
            </tr>
        </thead>
        <tbody>
	        @for(int pd = 0; pd < Model.Count(); pd++)
	        {
                <tr class=@(ViewBag.name == Model.ToList()[pd].Username ? "table-success" : "table-primary")>
                    <th scope="row">@(pd + 1)</th>
                    <partial name="partialLeaderboard.cshtml" for="@Model.ToList()[pd]" />
                </tr>
	        }
        </tbody>
    </table>
</div>
