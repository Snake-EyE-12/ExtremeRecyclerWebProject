<div id="updatedContent">
	<!-- Content to be updated -->
</div>

<script>
	window.setInterval(function () {
		updateContent()
	}, 100);

	function updateContent() {
		$.ajax({
			url: '@Url.Action("ProgressBar", "Game")',
			type: 'GET',
			success: function (data) {
				$('#updatedContent').html(data);
			}
		});
	}

	// Call the function initially or trigger it based on some event
	$(document).ready(function () {
		updateContent(); // Call the function when the page loads
		// You can also set a timer or event listener to periodically update the content
	});
</script>

