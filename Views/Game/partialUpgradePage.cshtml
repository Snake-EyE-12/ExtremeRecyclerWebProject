@using ExtremeRecycler.Models.Upgrades;
@model ValueUpgrade

<div class="list-group-item-primary text-center upgrade-border" data-toggle="tooltip" data-placement="top" title="@Model.Description">
	<div>
		<b>
			@Model.DisplayName
		</b>
	</div>
	<div>
		Current Efficiency: @Model.Execute()
	</div>
	<div>
		Cost To Upgrade: @Model.GetCurrentCost()
	</div>
	<div>
		<form asp-controller="Game" asp-action="BuyUpgrade">
			<input name="upgradeName" type="hidden" value="@Model.UpgradeName" />
			<button type="submit" class="btn btn-info">Purchase</button>
		</form>
	</div>
</div>